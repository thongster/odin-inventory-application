<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" href="/icon.png" />
    <title>Mage Spellbook | Inventory Application</title>
  </head>
  <body>
    <%- include("partials/header.ejs") %>

    <main class="main">
      <section class="section">

        <header class="section-header section-header-with-action">
          <div class="section-header-text">
            <h2 class="section-title">Elemental Disciplines</h2>
            <p class="section-subtitle">
              Each element represents a distinct magical philosophy and style of spellcasting.
            </p>
          </div>

          <a href="/elements/add" class="button-primary">
            + Add Element
          </a>
        </header>

        <% if (elements.length === 0) { %>
          <p class="empty-state">
            No elements have been recorded yet.
          </p>
        <% } else { %>
          <div class="element-grid">
            <% elements.forEach((element) => { %>
              <article class="element-card">
                <h3 class="element-name">
                  <a
                    href="/elements/<%= element.name.toLowerCase() %>"
                    class="element-link"
                  >
                    <%= element.name %>
                  </a>
                </h3>

                <p class="element-description">
                  <%= element.description %>
                </p>
              </article>
            <% }) %>
          </div>
        <% } %>

      </section>
    </main>

    <%- include("partials/footer.ejs") %>

  </body>
</html>
