<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" href="/icon.png" />
    <title>Mage Spellbook | Inventory Application</title>
  </head>
  <body>
    <%- include("partials/header.ejs") %>

    <main class="main">
      <section class="section">

        <article class="form-card">

          <header class="form-header">
            <h2 class="form-title">Add New Spell</h2>
            <p class="form-subtitle">
              Record a newly discovered spell into the Mage Spellbook.
            </p>
          </header>

          <%- include("partials/errors.ejs") %>

          <form action="/spells/new" method="POST" class="form">

            <div class="form-group">
              <label for="name">Spell Name</label>
              <input
                type="text"
                name="name"
                placeholder="e.g. Inferno Burst"
                required
              />
            </div>

            <div class="form-group">
              <label for="description">Description</label>
              <textarea
                rows="4"
                name="description"
                placeholder="Describe the spellâ€™s effects and behavior..."
                required
              ></textarea>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="damage">Damage</label>
                <input type="number" name="damage" required />
              </div>

              <div class="form-group">
                <label for="mana">Mana</label>
                <input type="number" name="mana" required />
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="cooldown">Cooldown (seconds)</label>
                <input type="number" name="cooldown" required />
              </div>

              <div class="form-group">
                <label for="range">Range</label>
                <select name="range" required>
                  <option value="Close">Close</option>
                  <option value="Medium">Medium</option>
                  <option value="Long">Long</option>
                </select>
              </div>
            </div>

            <div class="form-group">
              <label for="element">Element</label>
              <select name="element" required>
                <% elements.forEach((element) => { %>
                  <option value="<%= element.name %>">
                    <%= element.name %>
                  </option>
                <% }) %>
              </select>
            </div>

            <div class="form-actions">
              <button type="submit" class="button-primary">
                Add Spell
              </button>
              <a href="/spells" class="button-secondary">
                Cancel
              </a>
            </div>

          </form>

        </article>

      </section>
    </main>

    <%- include("partials/footer.ejs") %>

  </body>
</html>
