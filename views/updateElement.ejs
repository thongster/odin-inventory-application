<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" href="/icon.png" />
    <title>Mage Spellbook | Inventory Application</title>
  </head>
  <body>
    <%- include("partials/header.ejs") %>

    <main class="main">
      <section class="section">
        <article class="form-card">
          <header class="form-header">
            <h2 class="form-title">Update Element</h2>
            <p class="form-subtitle">
              Revise the details of this elemental discipline.
            </p>
          </header>

          <%- include("partials/errors.ejs") %>

          <form
            action="/elements/<%= element.name %>/update"
            method="POST"
            class="form"
          >
            <div class="form-group">
              <label for="name">Element Name</label>
              <input
                type="text"
                name="name"
                value="<%= element.name %>"
                required
              />
            </div>

            <div class="form-group">
              <label for="description">Description</label>
              <textarea rows="4" name="description" required>
<%= element.description %></textarea
              >
            </div>

            <div class="form-actions">
              <button type="submit" class="button-primary">
                Update Element
              </button>
              <a href="/elements/<%= element.name %>" class="button-secondary">
                Cancel
              </a>
            </div>
          </form>
        </article>
      </section>
    </main>

    <%- include("partials/footer.ejs") %>
  </body>
</html>
